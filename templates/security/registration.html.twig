{% extends "base.html.twig" %}

{% block body %}

<h1>Inscription sur le site</h1>

{{form_start(form)}}
{{ form_row(form.username, {'label':'Nom d\'utilisateur', 'attr' : {'placeholder': "Votre pseudo"}}) }}
{{ form_row(form.email, {'label':'Email', 'attr' : {'placeholder': "Votre email"}}) }}
{{ form_row(form.password, {'label':'Mot de passe', 'attr' : {'placeholder': "Votre mot de passe"}}) }}
{{ form_row(form.confirmPassword, {'label':'Confirmation du mot de passe', 'attr' : {'placeholder': "Confirmez le mot de passe"}}) }}
<button type="submit" class="btn btn-success">Inscription</button>
{{form_end(form)}}

{% endblock %}